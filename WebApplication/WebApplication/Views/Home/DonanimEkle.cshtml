
@{
    ViewBag.Title = "DonanimEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p align="center" style="padding:2% 0;">donanim ekle</p>

<div class="container-fluid d-flex justify-content-center">

    <form>


        <div class="form-group row">
            <label class="col-xs-3 col-form-label mr-2">numarasi: </label>
            <div class="col-xs-9">
                <input type="text" class="form-control" id="numarasi">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-xs-3 col-form-label mr-2">ad: </label>
            <div class="col-xs-9">
                <input type="text" class="form-control" id="ad">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-xs-3 col-form-label mr-2">tur: </label>
            <div class="col-xs-9">
                <select id="tur" class="form-control" data-live-search="true"></select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-xs-3 col-form-label mr-2">ip adresi </label>
            <div class="col-xs-9">
                <input type="text" class="form-control" id="paylasilan_ip">
            </div>
        </div>



        <div class="form-group row">
            <div class="offset-xs-3 col-xs-9">
                <button id="donanim_ekle" type="submit" class="btn btn-primary">donanim ekle</button>
            </div>
        </div>
    </form>



</div>


<script>
    $(document).ready(function () {

        $.ajax({
            type: "GET",
            url: "/Home/GetTur",
            dataType: "json",
            success: function (returnedData) {
                debugger;
                var data2 = returnedData.data;

                var s = '<option value="-1"disabled selected>tür seciniz</option>';
                for (var i = 0; i < data2.length; i++) {
                    s += '<option value="' + data2[i].id + '">' + data2[i].ad + '</option>';
                }

                $("#tur").html(s);

            }
        });

    });

    $("#donanim_ekle").click(function () {
        debugger;
        var model = {
            "id": $("#numarasi").val(),
            "ad": $("#ad").val(),
            "tur_id": $("#tur").val(),
            "paylasilan_alan_ip": $("#paylasilan_ip").val()
        };


        $.ajax({
            type: "POST",
            url: "/Home/SetDonanim",
            data: model,
            dataType: "json",
            async: false,
            success: function (response) {
                alert("eklendi");
            },
            failure: function (response) {
                alert("failure");
            },
            error: function (response) {
                alert("error");
            }
        });
    });


</script>